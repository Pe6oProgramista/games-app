<div id="games" class="section">
    <div class="games-container">
        <% let games =Array.from({length: 10}, (_, i) => ({idx: i, name: 'Banana', highScore: 50})) %>
        <% games.forEach(game => { %>
            <div class="game-container">
                <img src="/static/media/banana.svg" class="game-img" game="<%= game.idx %>">
                <span class="game-prop game-name"><%= game.name %></span>
                <span class="game-prop game-high-score">High score: <%= game.highScore %> </span>
            </div>
        <% }) %>
    </div>

    <div id="playground">
        <div class="playground-content">
            <span class="close">&times;</span>
            <canvas id="game-canvas" hidden width="600px" height="600px"></canvas>
        </div>
    </div>
</div>